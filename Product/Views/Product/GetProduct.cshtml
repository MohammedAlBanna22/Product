@{
    ViewData["Title"] = "product table";
}

@*<link href="~/lib/datatables/css/dataTables.bootstrap4.css" rel="stylesheet" />*@

<link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet" />
<div class="container" >
    <h3 class="text-primary">Products</h3>
    <hr />
    <style>
        #Customers {
            table-layout: fixed;
            width: 100% !important;
        }

            #Customers td,
            #Customers th {
                width: auto !important;
                white-space: normal;
                text-overflow: ellipsis;
                overflow: hidden;
            }
    </style>

    <table id="Customers" class="table table-striped table-bordered dt-responsive nowrap" width="50%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Product Name</th>
                <th>Product Description</th>
                <th>Product Date</th>
                <th>Epire Date</th>
                <th>Price</th>
                <th>Image Url</th>
            </tr>
        </thead>
    </table>
</div>






