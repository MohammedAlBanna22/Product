@model FoodProduct
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <strong>Add Item</strong> Elements
        </div>
        <div class="card-body card-block">
            <form  asp-action="index" asp-controller="Product"  method="post" enctype="multipart/form-data" class="form-horizontal" >
                 
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label class=" form-control-label">Static</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <p class="form-control-static">Product Info</p>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label for="text-input" class=" form-control-label">Product Name</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input  id="text-input"  placeholder="Enter the name of product" class="form-control" asp-for="productName">
                       
                    </div>
                </div>





                <div class="row form-group">
                    <div class="col col-md-3">
                        <label for="textarea-input" class=" form-control-label">Product description</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <textarea  id="textarea-input" rows="9" placeholder="Please enter Description" class="form-control" asp-for="productDescription"></textarea>
                    </div>
                </div>



                <div class="row form-group">
                    <div class="col col-md-3">
                        <label for="text-input" class=" form-control-label">Production Date</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input id="cc-exp"   class="form-control cc-exp" value="" data-val="true" data-val-required="Please enter the card expiration"
                               data-val-cc-exp="Please enter a valid month and year" placeholder="MM / YY"
                               autocomplete="cc-exp" asp-for="productDate">
                        <span class="help-block" data-valmsg-for="cc-exp" data-valmsg-replace="true"></span>
                    </div>
                </div>


                <div class="row form-group">
                    <div class="col col-md-3">
                        <label for="text-input" class=" form-control-label">Expire Date</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input id="cc-exp"   class="form-control cc-exp" value="" data-val="true" data-val-required="Please enter the card expiration"
                               data-val-cc-exp="Please enter a valid month and year" placeholder="MM / YY"
                               autocomplete="cc-exp" asp-for="EpireDate">
                        <span class="help-block" data-valmsg-for="cc-exp" data-valmsg-replace="true"></span>
                    </div>
                </div>




                <div class="row form-group">
                    <div class="col col-md-3">
                        <label for="text-input" class=" form-control-label">Price</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input id="cc-exp"  class="form-control cc-exp" value="" data-val="true"
                               placeholder=""
                               autocomplete="cc-exp" asp-for="price">
                        <span class="help-block" data-valmsg-for="cc-exp" data-valmsg-replace="true"></span>
                    </div>
                </div>



                <div class="row form-group">
                    <div class="col col-md-3">
                        <label for="file-input" class=" form-control-label">Product Image</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input  id="file-input"  class="form-control-file" asp-for="image">
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="fa fa-dot-circle-o"></i> Submit
                    </button>
                    <button type="reset" class="btn btn-danger btn-sm">
                        <i class="fa fa-ban"></i> Reset
                    </button>
                </div>
            </form>
        </div>
      
    </div>
</div>
