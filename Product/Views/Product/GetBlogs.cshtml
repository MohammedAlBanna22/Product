@{
    ViewData["Title"] = "Blogs table";
}
<link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet" />
<div class="container">
    <h3 class="text-primary">Blogs</h3>
    <hr />
    <style>
        #Customers {
            table-layout: fixed;
            width: 100% !important;
        }

            #Customers td,
            #Customers th {
                width: auto !important;
                white-space: normal;
                text-overflow: ellipsis;
                overflow: hidden;
            }
    </style>

    <table id="Customers" class="table table-striped table-bordered dt-responsive nowrap" width="50%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Date</th>
                <th>ImageUrl</th>
            </tr>
        </thead>
    </table>
</div>






@section Scripts
{
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="~/js/CustomBlogsDatatable.js"></script>



}
